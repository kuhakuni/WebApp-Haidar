@code{
	[Parameter]
	public bool IsAuthenticated { get; set; }

	[Inject]
	private NavigationManager Navigation { get; set; }

	public void HandleLogout()
    {
		Navigation.NavigateTo("/login");
    }
}

<nav class="navbar navbar-expand-lg py-3" data-aos="zoom-out">
	<div class="container">
		<a class="navbar-brand d-flex align-items-center gap-3" href="">
			@if (!IsAuthenticated)
            {
				<img src="./assets/img/logo-white.svg"
					 alt="Todo logo"
					 width="36"
					 height="36"
					 class="d-inline-block align-text-top" />
				<span class="fw-bold fs-2 text-white">Todo App</span>
            }
            else
            {
				<img src="./assets/img/logo.svg"
					 alt="Todo logo"
					 width="36"
					 height="36"
					 class="d-inline-block align-text-top" />
				<span class="fw-bold fs-2 text-primary">Todo App</span>
            }
		</a>
		<div class="d-flex">
			@if (!IsAuthenticated)
            {
                <a class="btn btn-login rounded-5" href="/Login">Login</a>
            }
            else
            {
                <button class="btn btn-nav-logout rounded-5" id="btn-logout" @onclick="HandleLogout">
                    Logout
                </button>
            }
		</div>
	</div>
</nav>

